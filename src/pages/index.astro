---
import EmailFormInput from "../components/EmailFormInput.astro";
import MailingListForm from "../components/MailingListForm.astro";
import MainLayout from "../layouts/mainLayout.astro"
---

<style>
    .dottedGrid::before {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        background-color: black;
        background-image: radial-gradient(#d4d4d4 1px, transparent 0);
        background-size: 40px 40px;
        background-position: -19px 0px;
        z-index: 1;
    }
    
    .dottedGrid::after {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        /* from red, via orange, to yellow */
        background: black;
        background-image: linear-gradient(to top, #ff7979, #ff7f00, #ffe100);
        mix-blend-mode: multiply;
        z-index: 2;
    }
</style>

<MainLayout titleProp="Home" description="The beginnings of an amazing distributor, created by Aaron, Nick and Dave">
