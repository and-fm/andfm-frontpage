---
import ThemeSwitch from "@components/ThemeSwitch.astro";
import Main from "../components/Main.astro";
import MainLayout from "../layouts/mainLayout.astro";
import Card from "@components/Card.astro";
---

<MainLayout
  pageTitle="Home"
  pageDescription="Your home base for your music. All you'll ever need."
>
  <Main>
    <div class="mb-12 text-center">
      <h1 class="mb-4 text-6xl font-bold">
        An Artist's Home Base.
        <br />
        <span class="">
          <span>All You Need.</span>
        </span>
      </h1>
      <p class="mb-8 text-xl">No limits, no fuss, 100% transparent.</p>
      <!-- <div class="flex justify-center space-x-4">
        <button class="bg-black text-white hover:bg-gray-800 px-4 py-2">
          Start Uploading
        </button>
        <button
          class="border-2 border-black bg-transparent text-black hover:bg-black hover:text-white px-4 py-2"
        >
          Learn More
        </button>
      </div> -->
    </div>
    <div class="grid gap-8 md:grid-cols-3">
      <Card>
        <h2 class="mb-2 text-2xl font-bold">Truly Unlimited</h2>
        <p>
          No limits on number of tracks, artists, albums, collaborators, & etc.
        </p>
      </Card>
      <Card class="bg-green-300">
        <h2 class="mb-2 text-2xl font-bold">Fast Distribution</h2>
        <p>Your tracks get delivered to stores within 2 days of submission.</p>
      </Card>
      <Card class="bg-red-300">
        <!-- <Play class="mb-4 h-12 w-12" /> -->
        <h2 class="mb-2 text-2xl font-bold">Not For Profit</h2>
        <p>
          All excess "profits" are reinvested to make and.fm better for all.
        </p>
      </Card>
    </div>
    <Card class="mt-12 bg-yellow-100">
      <h2 class="mb-4 text-3xl font-bold">Join Our Community</h2>
      <p class="mb-4">
        Stay updated with <strong>and.fm</strong>'s progress towards a better
        future for rightsholders.
      </p>
      <div class="flex gap-2 md:flex-row flex-col">
        <a
          href="https://and.fm/discord"
          target="_blank"
          class="bg-black text-white hover:bg-gray-800 px-4 py-2 flex-grow text-center"
          >Join The Discord</a
        >
        <a
          href="https://and.fm/bluesky"
          target="_blank"
          class="bg-black text-white hover:bg-gray-800 px-4 py-2 flex-grow text-center"
          >Follow on Bluesky</a
        >
      </div>
      <!-- <form class="flex gap-2 md:flex-row flex-col">
        <input
          class="md:flex-grow border-2 border-black bg-transparent px-4 py-2"
          placeholder="Enter your email"
          type="email"
          disabled
        />
        <button disabled class="bg-black text-white hover:bg-gray-800 px-4 py-2"
          >Subscribe</button
        >
      </form> -->
    </Card>
  </Main>
</MainLayout>
