---
import Moon from "./icons/Moon.astro";
import Sun from "./icons/Sun.astro";
---

<button
  class="theme-toggle flex items-center ml-[-2em] w-max p-2.5 bg-surface-800 hover:bg-surface-700 rounded-full"
  id="theme-toggle"
  title="Toggles light & dark"
  aria-label="auto"
  aria-live="polite"
>
  <Sun size="1.3em" class="theme-sun" />
  <Moon size="1.3em" class="theme-moon hidden" />
</button>
