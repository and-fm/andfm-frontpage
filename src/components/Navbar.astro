---
import Logo from "../../public/android-icon-144x144.png";

import { Image } from "astro:assets";
---

<div class="w-[100vw] flex items-center justify-center">
    <nav
        class="flex flex-row items-center justify-between w-full max-w-6xl p-8 mx-auto md:px-16"
    >
        <div class="w-fit">
            <a href="/" class="w-fit">
                <Image
                    src={Logo}
                    width="128"
                    height="128"
                    alt="AND.FM Logo"
                    loading="eager"
                    class="object-contain w-12 h-12 md:w-16 md:h-16"
                />
            </a>
        </div>
        <div
            class="flex-row items-center justify-end hidden gap-5 text-white lg:gap-10 md:flex"
        >
            <a rel="prefetch" class="font-light text-zinc-100" href="/">Home</a>
            <a rel="prefetch" class="font-light text-zinc-100" href="/blog"
                >Blog</a
            >
            <a rel="prefetch" class="font-light text-zinc-100" href="/faq"
                >FAQ</a
            >
            <a
                class="p-3 px-5 font-semibold text-center text-black rounded-xl bg-gradient-to-tr from-red-300 via-orange-300 to-yellow-300"
                target="_blank"
                href="https://and.fm/login">Login</a
            >
        </div>
        <div class="z-50 block md:hidden">
            <button
                onclick="const menu = document.getElementById('mobileMenu'); menu.style.display = menu.style.display === 'none' ? 'block' : 'none'"
                aria-label="navbarButton"
                id="hamburgerToggleButton"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="white"
                    class="w-6 h-6"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5"
                    ></path>
                </svg>
            </button>
        </div>
    </nav>
</div>

<div
    id="mobileMenu"
    style="display: none"
    onclick="const menu = document.getElementById('mobileMenu'); menu.style.display = 'none'"
    class="absolute
    p-4 pb-12 top-0 z-20 flex flex-col w-[100vw] gap-4 md:hidden bg-black"
>
    <div class="px-4 pt-4 w-fit">
        <a href="/" class="w-fit">
            <Image
                src={Logo}
                width="128"
                height="128"
                alt="AND.FM Logo"
                loading="eager"
                class="object-contain w-12 h-12"
            />
        </a>
    </div>
    <div class="flex flex-col pt-5 items-center gap-2 text-white">
        <a rel="prefetch" class="text-3xl font-semibold text-zinc-100" href="/"
            >Home</a
        >
        <a
            rel="prefetch"
            class="text-3xl font-semibold text-zinc-100"
            href="/blog">Blog</a
        >
        <a
            rel="prefetch"
            class="text-3xl font-semibold text-zinc-100"
            href="/faq">FAQ</a
        >
        <a
            class="p-4 px-6 mt-6 text-2xl font-bold text-center text-black rounded-xl bg-gradient-to-tr w-fit from-red-300 via-orange-300 to-yellow-300"
            href="https://and.fm/login">Login</a
        >
    </div>
</div>
