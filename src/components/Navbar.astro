---
import Logo from "../../public/android-chrome-512x512.png"

import { Image } from "astro:assets"

---

<style is:inline>
    .hideToggle {display: none;}
</style>

<nav class="flex flex-row items-center justify-between w-full max-w-6xl p-8 mx-auto md:px-16">
    <div class="w-fit"> <!-- Put logos and other things here -->
        <a href="/" class="w-fit">
            <Image src={Logo} width="128" height="128" alt="AND.FM Logo" loading="eager" class="object-contain w-12 h-12 md:w-16 md:h-16" />
        </a>
    </div>
    <div class="flex-row items-center justify-end hidden gap-5 text-white lg:gap-10 md:flex"> <!-- Links -->
        <a rel="prefetch" class="font-light text-zinc-100" href="/">Home</a>
        <a rel="prefetch" class="font-light text-zinc-100" href="/blog">Blog</a>
        <a rel="prefetch" class="font-light text-zinc-100" href="/faq">FAQ</a>
        <a class="p-3 px-5 font-semibold text-center text-black rounded-xl bg-gradient-to-tr from-red-300 via-orange-300 to-yellow-300" target="_blank" href="https://and.fm/login">Login</a>
    </div>
    <div class="z-50 block md:hidden">

        <button aria-label="navbarButton" id="hamburgerToggleButton">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5" />
            </svg>
        </button>

    </div>
</nav>
<div id="mobileMenu" style="display: none;" class="absolute top-0 z-20 flex flex-col w-full h-full gap-4 p-4 md:hidden backdrop-blur-sm bg-black/70">
    <div class="p-4 mb-12 w-fit"> <!-- Put logos and other things here -->
        <a href="/" class="w-fit">
            <Image src={Logo} width="128" height="128" alt="AND.FM Logo" loading="eager" class="object-contain w-12 h-12" />
        </a>
    </div>
    <div class="flex flex-col items-end gap-2 text-white">
        <a rel="prefetch" class="text-4xl font-bold text-zinc-100" href="/">Home</a>
        <a rel="prefetch" class="text-4xl font-bold text-zinc-100" href="/blog">Blog</a> 
        <a rel="prefetch" class="text-4xl font-bold text-zinc-100" href="/faq">FAQ</a>
        <a class="p-6 px-8 mt-12 text-2xl font-bold text-center text-black rounded-xl bg-gradient-to-tr w-fit from-red-300 via-orange-300 to-yellow-300" href="https://and.fm/login">Login</a>
    </div>
</div>

<script>
    // basic code to add toggle visibility to hamburger menu
    const mobileMenu = document?.getElementById("mobileMenu")!
    
    document.getElementById("hamburgerToggleButton")?.addEventListener("click", () => {
        const toggled = mobileMenu.style.display === "none"
        mobileMenu.style.display = toggled ? "block" : "none"
    })
</script>

