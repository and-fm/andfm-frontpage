---
import Logo from "../assets/logo.png";
import { Image } from "astro:assets";
import Bluesky from "../components/icons/Bluesky.astro";
import Instagram from "../components/icons/Instagram.astro";
import Discord from "../components/icons/Discord.astro";

interface Props {
  pageTitle: string;
  pageDescription: string;
}

const { pageTitle, pageDescription }: Props = Astro.props;

const siteTitle = "and.fm";
const title = pageTitle === "Home" ? siteTitle : `${pageTitle} | ${siteTitle}`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png" />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="/apple-icon-114x114.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="120x120"
      href="/apple-icon-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="144x144"
      href="/apple-icon-144x144.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="152x152"
      href="/apple-icon-152x152.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-icon-180x180.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/android-icon-192x192.png"
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png" />
    <meta name="msapplication-TileColor" content="#232323" />
    <meta name="theme-color" content="#232323" />

    <!-- Meta Tags Generated with https://metatags.io -->
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={pageDescription} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.and.fm" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={pageDescription} />
    <!-- <meta property="og:image" content="https://metatags.io/images/meta-tags.png" /> -->

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.and.fm" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={pageDescription} />
    <!-- <meta property="twitter:image" content="https://metatags.io/images/meta-tags.png" /> -->

    <style is:global></style>
  </head>
  <!-- keep overflow-x-clip otherwise the navbar (which is of width 100vw) will cause the page to have a horizontal scrollbar -->
  <body class="bg-yellow-200">
    <div style="display: contents">
      <div class="flex flex-col gap-12 justify-between min-h-screen text-black">
        <div class="flex flex-col gap-12">
          <header class="bg-surface-600 text-white p-4">
            <nav
              class="container md:px-12 mx-auto flex md:flex-row flex-col gap-4 md:items-center justify-between"
            >
              <a href="/" class="flex flex-row items-center gap-4">
                <Image
                  src={Logo}
                  width="128"
                  height="128"
                  alt="and.fm logo"
                  loading="eager"
                  class="object-contain w-12 h-12"
                />
                <span class="text-3xl font-bold"> and.fm </span>
              </a>
              <div class="flex items-center space-x-4">
                <a href="#" class="font-medium hover:underline"> About </a>
                <a href="#" class="font-medium hover:underline"> Pricing </a>
                <a href="#" class="font-medium hover:underline"> FAQ </a>
                <a
                  href="https://and.fm/waitlist"
                  target="_blank"
                  class="border-2 border-white bg-transparent text-white hover:bg-white hover:text-black px-4 py-2"
                >
                  Sign Up
                </a>
                <a
                  href="https://and.fm/login"
                  target="_blank"
                  class="bg-white border-2 border-white text-black hover:bg-gray-100 px-4 py-2"
                >
                  Log In
                </a>
              </div>
            </nav>
          </header>
          <main class="container mx-auto md:px-12">
            <div class="mb-12 text-center">
              <h1 class="mb-4 text-6xl font-bold">
                An Artist's Home Base.
                <br />
                <span class="relative">
                  <span class="relative z-10">All You Need.</span>
                  <span
                    class="absolute bottom-2 left-0 z-0 h-4 w-full bg-pink-400"
                  ></span>
                </span>
              </h1>
              <p class="mb-8 text-xl">No limits, no fuss, 100% transparent.</p>
              <div class="flex justify-center space-x-4">
                <button class="bg-black text-white hover:bg-gray-800 px-4 py-2">
                  <!-- <Upload class="mr-2 h-5 w-5" /> -->
                  Start Uploading
                </button>
                <button
                  class="border-2 border-black bg-transparent text-black hover:bg-black hover:text-white px-4 py-2"
                >
                  Learn More
                </button>
              </div>
            </div>
            <div class="grid gap-8 md:grid-cols-3">
              <div
                class="border-4 border-black bg-blue-300 p-6 shadow-[8px_8px_0_0_rgba(0,0,0,1)]"
              >
                <!-- <Music class="mb-4 h-12 w-12" /> -->
                <h2 class="mb-2 text-2xl font-bold">Truly Unlimited</h2>
                <p>
                  No limits on number of tracks, artists, albums, collaborators,
                  & etc.
                </p>
              </div>
              <div
                class="border-4 border-black bg-green-300 p-6 shadow-[8px_8px_0_0_rgba(0,0,0,1)]"
              >
                <!-- <Zap class="mb-4 h-12 w-12" /> -->
                <h2 class="mb-2 text-2xl font-bold">Fast Distribution</h2>
                <p>
                  Your tracks get delivered to stores within 2 days of
                  submission.
                </p>
              </div>
              <div
                class="border-4 border-black bg-red-300 p-6 shadow-[8px_8px_0_0_rgba(0,0,0,1)]"
              >
                <!-- <Play class="mb-4 h-12 w-12" /> -->
                <h2 class="mb-2 text-2xl font-bold">Not For Profit</h2>
                <p>
                  All excess "profits" are reinvested to make and.fm better for
                  all.
                </p>
              </div>
            </div>
            <div
              class="mt-12 border-4 border-black bg-white p-8 shadow-[8px_8px_0_0_rgba(0,0,0,1)]"
            >
              <h2 class="mb-4 text-3xl font-bold">Join Our Newsletter</h2>
              <p class="mb-4">
                Stay updated with <strong>and.fm</strong>'s progress towards a
                better future for rightsholders.
              </p>
              <form class="flex gap-2 md:flex-row flex-col">
                <input
                  class="md:flex-grow border-2 border-black bg-transparent px-4 py-2"
                  placeholder="Enter your email"
                  type="email"
                  disabled
                />
                <button
                  disabled
                  class="bg-black text-white hover:bg-gray-800 px-4 py-2"
                  >Subscribe</button
                >
              </form>
            </div>
          </main>
        </div>
        <footer class="bg-black text-white p-8">
          <div class="container mx-auto grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="space-y-4">
              <h2 class="text-3xl font-bold">and.fm</h2>
              <p class="text-sm">
                Empowering artists to share their music with the world.
              </p>
              <div class="flex space-x-4">
                <a
                  href="https://and.fm/discord"
                  aria-label="Discord"
                  target="_blank"><Discord /></a
                >
                <a
                  href="https://and.fm/bluesky"
                  aria-label="Bluesky"
                  target="_blank"><Bluesky /></a
                >
                <a
                  href="https://and.fm/instagram"
                  aria-label="Instagram"
                  target="_blank"><Instagram /></a
                >
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-4">Company</h3>
              <ul class="space-y-2">
                <li>
                  <a
                    target="_blank"
                    href="https://find-and-update.company-information.service.gov.uk/company/16016993"
                    class="hover:text-cyan-300">Public Records</a
                  >
                </li>
                <li><a href="#" class="hover:text-cyan-300">About Us</a></li>
                <li><a href="#" class="hover:text-cyan-300">News</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-4">Resources</h3>
              <ul class="space-y-2">
                <li><a href="#" class="hover:text-cyan-300">Blog</a></li>
                <li><a href="#" class="hover:text-cyan-300">Help Center</a></li>
                <li><a href="#" class="hover:text-cyan-300">Tutorials</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-4">Legal</h3>
              <ul class="space-y-2">
                <li>
                  <a href="#" class="hover:text-cyan-300">Terms of Service</a>
                </li>
                <li>
                  <a href="#" class="hover:text-cyan-300">Privacy Policy</a>
                </li>
                <li>
                  <a href="#" class="hover:text-cyan-300">Cookie Policy</a>
                </li>
                <li><a href="#" class="hover:text-cyan-300">GDPR</a></li>
              </ul>
            </div>
          </div>
          <div class="mt-8 pt-8 border-t border-gray-700 text-center">
            <p>
              &copy; {new Date().getFullYear()} andfm limited. All rights reserved.
            </p>
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>
